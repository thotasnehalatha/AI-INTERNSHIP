      "source": [
        "# Install dependencies\n",
        "!pip install tensorflow keras pillow numpy\n",
        "\n",
        "# Import libraries\n",
        "import numpy as np\n",
        "import tensorflow as tf\n",
        "from tensorflow.keras.applications import ResNet50\n",
        "from tensorflow.keras.preprocessing import image\n",
        "from tensorflow.keras.applications.resnet50 import preprocess_input\n",
        "from tensorflow.keras.models import Model\n",
        "from tensorflow.keras.preprocessing.sequence import pad_sequences\n",
        "from tensorflow.keras.layers import Input, LSTM, Embedding, Dense, add\n",
        "import pickle\n",
        "\n",
        "# ---------------- Feature Extractor (CNN - ResNet50) ---------------- #\n",
        "# Load ResNet50 model (pretrained on ImageNet)\n",
        "base_model = ResNet50(weights=\"imagenet\")\n",
        "cnn_model = Model(base_model.input, base_model.layers[-2].output)\n",
        "\n",
        "def extract_features(img_path):\n",
        "    img = image.load_img(img_path, target_size=(224, 224))\n",
        "    x = image.img_to_array(img)\n",
        "    x = np.expand_dims(x, axis=0)\n",
        "    x = preprocess_input(x)\n",
        "    feature = cnn_model.predict(x, verbose=0)\n",
        "    return feature\n",
        "\n",
        "# ---------------- Text Processing ---------------- #\n",
        "# For simplicity, we'll define a small dummy vocabulary\n",
        "vocab = {\"<start>\": 1, \"<end>\": 2, \"a\": 3, \"man\": 4, \"riding\": 5, \"horse\": 6}\n",
        "inv_vocab = {v: k for k, v in vocab.items()}\n",
        "\n",
        "max_len = 5  # caption length\n",
        "\n",
        "# ---------------- Caption Generator Model (LSTM) ---------------- #\n",
        "embedding_dim = 50\n",
        "\n",
        "# Inputs\n",
        "inputs1 = Input(shape=(2048,))\n",
        "fe1 = Dense(256, activation=\"relu\")(inputs1)\n",
        "\n",
        "inputs2 = Input(shape=(max_len,))\n",
        "se1 = Embedding(len(vocab)+1, embedding_dim, mask_zero=True)(inputs2)\n",
        "se2 = LSTM(256)(se1)\n",
        "\n",
        "decoder1 = add([fe1, se2])\n",
        "decoder2 = Dense(256, activation=\"relu\")(decoder1)\n",
        "outputs = Dense(len(vocab)+1, activation=\"softmax\")(decoder2)\n",
        "\n",
        "model = Model(inputs=[inputs1, inputs2], outputs=outputs)\n",
        "model.compile(loss=\"categorical_crossentropy\", optimizer=\"adam\")\n",
        "\n",
        "print(\"✅ Model built successfully!\")\n",
        "\n",
        "# ---------------- Dummy Caption Generation ---------------- #\n",
        "def generate_caption(feature):\n",
        "    # Normally, you would load a trained model\n",
        "    # Here we return a dummy caption\n",
        "    return \"a man riding a horse\"\n",
        "\n",
        "# ---------------- Test ---------------- #\n",
        "# Upload an image in Colab before running\n",
        "from google.colab import files\n",
        "uploaded = files.upload()\n",
        "\n",
        "for fn in uploaded.keys():\n",
        "    features = extract_features(fn)\n",
        "    caption = generate_caption(features)\n",
        "    print(f\"Generated Caption: {caption}\")"
